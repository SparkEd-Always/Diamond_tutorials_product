# Production Environment Variables Template
# Copy this to .env.production and fill with actual values

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgresql://username:password@host:port/database_name
# Example: postgresql://sparky_user:secure_password@containers-us-west-123.railway.app:5432/railway

# Security (IMPORTANT: Generate new secret key for production)
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890
TWILIO_PHONE_NUMBER=+1234567890

# School/Organization Settings
SCHOOL_NAME=AVM Tutorials
SCHOOL_WHATSAPP_NUMBER=+919380668711

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Redis Configuration (optional - for caching)
# REDIS_URL=redis://default:password@host:port
