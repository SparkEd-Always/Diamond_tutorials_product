# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/admission_system
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///./admission.db

# Redis (Optional)
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=admissions@yourschool.com

# SMS Configuration
SMS_PROVIDER=msg91
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=SCHOOL

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE_MB=5
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png

# School Settings
SCHOOL_NAME=ABC International School
SCHOOL_CODE=ABC
CURRENT_ACADEMIC_YEAR=2024-25

# Payment Gateway (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
