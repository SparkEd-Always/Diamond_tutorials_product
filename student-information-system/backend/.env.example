# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/sis_dev
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=sis_

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=sis-documents
S3_BUCKET_URL=https://sis-documents.s3.amazonaws.com

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@sparked.in
FROM_NAME=Sparked SIS

# SMS Configuration (Twilio / MSG91)
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token
TWILIO_PHONE_NUMBER=+1234567890

# Application Configuration
APP_NAME=Student Information System
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=10
ALLOWED_FILE_TYPES=["pdf", "jpg", "jpeg", "png", "docx"]

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=100

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
