# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_API_VERSION=v1

# App Configuration
VITE_APP_NAME=Student Information System
VITE_APP_VERSION=1.0.0

# Environment
VITE_ENV=development

# Features
